<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Halk Elektronik Para ve Ödeme Hizmetleri A.Ş</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
        }

        .navbar-custom {
            background-color: #1b0565;
            height: 70px;
        }

            .navbar-custom .nav-link {
                color: white !important;
            }

        .navbar-HalkOdePaymentIntegrationand {
            flex-grow: 1;
            text-align: center;
        }

        .navbar-nav {
            flex-direction: row;
            justify-content: center;
            width: 100%;
           
           
        }

        footer {
            background-color: #1b0565;
            color: white;
        }

        .btn-custom {
            background-color: #1b0565;
            color: white;
        }

        .btn {
            background-color: #1b0565;
            color: white;
            margin-bottom: 10px;
        }

      

        .color-me{
            color: #1b0565;
             display: flex;
            flex-direction: column;
            font-size: 14px;
        }
        .nav-link{
            color: #1b0565;
        }
    </style>


</head>
<body>
    <nav class='navbar navbar-expand-lg navbar-light navbar-custom'>
        <a class='nav-links' asp-area="" asp-controller="Home" asp-action="Index">
           <img src="~/HALKODE_LOGO-02.png" alt="Platform Ödeme" style="height: 120px;  margin-left:300px"> 
        </a>
        <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation'>
            <span class='navbar-toggler-icon' style="color:#17456d"></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarNav'>
            <ul class='navbar-nav'>
                <li class='nav-item'>
                    <a class='nav-link' asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                </li>
                <li class='nav-item dropdown'>
                   <a class='nav-link dropdown-toggle' href='#' id='navbarDropdown' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                        Entegrasyonlar
                    </a>
                    <div class='dropdown-menu' aria-labelledby='navbarDropdown'>
                        <div class="text"></div>
                        <a class="color-me" asp-area="" asp-controller="PaySmart2D" asp-action="Index">2D Ödeme</a>
                        <a class="color-me" asp-area="" asp-controller="PaySmart3D" asp-action="Index">3D Ödeme</a>
                        <a class="color-me" asp-area="" asp-controller="PurchaseLink" asp-action="Index">Link İle Ödeme</a>
                        <a class="color-me" asp-area="" asp-controller="Refund" asp-action="Index">İade Entegrasyonu</a>
                        <a class="color-me" asp-area="" asp-controller="CheckStatus" asp-action="Index">Ödeme Sorgulama</a>
                        <div class="dropdown-divider"></div>
                        <a class="color-me" asp-area="" asp-controller="GetPos" asp-action="Index">Taksit Gösterme</a>
                        <a class="color-me" asp-area="" asp-controller="Commissions" asp-action="Index">Komisyon Gösterme</a>
                       @*   <a class="color-me" asp-area="" asp-controller="Alltransaction" asp-action="Index">Tüm İşlemleri Gösterme</a> *@
                        <a class="color-me" asp-area="" asp-controller="ConfirmPayment" asp-action="Index">Ödeme Tamamlama</a>
               @*          <a class="color-me" asp-area="" asp-controller="Complete" asp-action="Index">İşlem Tamamlama</a> *@
                        <a class="color-me" asp-area="" asp-controller="Taksit" asp-action="Index">Taksit Tablosu</a>
                    </div>
                </li>
                <li class='nav-item'>
                    <a class='nav-link' asp-area="" asp-controller="Parameters" asp-action="Index">Parametreler</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="py-3">
        <div class="container text-center">
            <span>
                &copy; @DateTime.Now.Year Halk Elektronik Para ve Ödeme Hizmetleri A.Ş - v@(System.Reflection.Assembly.GetExecutingAssembly().GetName().Version)
            </span>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
